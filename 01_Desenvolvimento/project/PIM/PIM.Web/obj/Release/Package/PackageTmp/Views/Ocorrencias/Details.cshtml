@model PIM.Web.ViewModels.OcorrenciaVM

@{
    ViewBag.Title = "Detalhe - Ocorrência";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalhe</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Ocorrências", "Index")
            </li>
            <li class="active">
                <strong>Detalhe</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalhe Ocorrência</h5>
                </div>
                <div class="ibox-content">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Motivo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Motivo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DataOcorrencia)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DataOcorrencia)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IdMorador)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NomeMorador)
                        </dd>

                    </dl>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Identificador }, new { @class = "btn btn-warning btn-outline btn-xs" })
                    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success btn-outline btn-xs" })

                </div>
            </div>
        </div>
    </div>
</div>
