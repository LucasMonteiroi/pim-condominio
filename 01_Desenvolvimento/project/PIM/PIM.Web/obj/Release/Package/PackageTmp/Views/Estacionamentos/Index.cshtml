@model IEnumerable<PIM.Web.ViewModels.EstacionamentoVM>
@using PIM.Database.TO

@{
    ViewBag.Title = "Estacionamento";
}
<div class="row">
    <div class="col-lg-12">
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-sm-4">
                <h2>Estacionamento</h2>
                <ol class="breadcrumb">
                    <li class="active">
                        <strong>Estacionamento</strong>
                    </li>
                </ol>
            </div>
        </div>
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Lista de Estacionamentos</h5>
                <div class="ibox-tools">
                    @{
                        var usu = (UsuarioTO)Session["UsuarioTO"];

                        if (usu.IdGrupo == 2 || usu.IdGrupo == 3)
                        {

                        }
                        else
                        {
                            @Html.ActionLink("Criar", "Create", null, new { @class = "btn btn-success btn-outline btn-xs" })
                        }
                    }
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.VagasDisponiveis)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdApartamento)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VagasDisponiveis)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apartamento)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalhe", "Details", new { id = item.Identificador }, new { @class = "btn btn-primary btn-outline btn-xs" })
                                    @{
                                        if (usu.IdGrupo == 2 || usu.IdGrupo == 3)
                                        {

                                        }
                                        else
                                        {
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Identificador }, new { @class = "btn btn-warning btn-outline btn-xs" })
                                            @Html.ActionLink("Remover", "Delete", new { id = item.Identificador }, new { @class = "btn btn-danger btn-outline btn-xs" })
                                        }
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
