@model PIM.Web.ViewModels.DependenteVM
@using PIM.Database.TO

@{
    ViewBag.Title = "Detalhe - Dependente";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalhe</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Dependentes", "Index")
            </li>
            <li class="active">
                <strong>Detalhe</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalhe Dependente</h5>
                </div>
                <div class="ibox-content">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RG)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RG)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CPF)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CPF)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Telefone)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.GrauParentesco)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.GrauParentesco)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IdMorador)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NomeMorador)
                        </dd>

                    </dl>
                    @{
                        if (Session["UsuarioTO"] != null)
                        {
                            var usuarioTO = (UsuarioTO)Session["UsuarioTO"];

                            if (usuarioTO.IdGrupo != 3)
                            {
                                @Html.ActionLink("Editar", "Edit", new { id = usuarioTO.Identificador }, new { @class = "btn btn-warning btn-outline btn-xs" })
                            }
                        }
                    }
                    @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success btn-outline btn-xs" })

                </div>
            </div>
        </div>
    </div>
</div>