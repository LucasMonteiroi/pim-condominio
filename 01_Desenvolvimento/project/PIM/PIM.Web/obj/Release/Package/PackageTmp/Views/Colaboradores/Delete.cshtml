@model PIM.Web.ViewModels.ColaboradorVM

@{
    ViewBag.Title = "Remover - Colaborador";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Delete</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Colaboradores", "Index")
            </li>
            <li class="active">
                <strong>Remover</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-primary btn-outline btn-xs" })
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Remover Colaborador</h5>
                </div>
                <div class="ibox-content">
                    <h4 class="text-danger">Você tem certeza que deseja remover o item abaixo?</h4>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RG)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RG)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CPF)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CPF)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Funcao)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Funcao)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Salario)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Salario)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DataContrato)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DataContrato)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Remover" class="btn btn-danger btn-outline btn-xs" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-success btn-outline btn-xs" })
                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>
