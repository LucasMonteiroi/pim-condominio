@model PIM.Web.ViewModels.ApartamentoVM
@using PIM.Database.TO

@{
    ViewBag.Title = "Detalhe - Apartamento";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Detalhe</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Apartamentos", "Index")
            </li>
            <li class="active">
                <strong>Detalhe</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalhe Apartamento</h5>
                </div>
                <div class="ibox-content">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Bloco)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Bloco)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Numero)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Numero)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IdContrato)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DescricaoContrato)
                        </dd>

                    </dl>
                    @{
                        var usu = (UsuarioTO)Session["UsuarioTO"];

                        if (usu.IdGrupo == 2 || usu.IdGrupo == 3)
                        {
                            @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success btn-outline btn-xs" })
                        }
                        else
                        {
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Identificador }, new { @class = "btn btn-warning btn-outline btn-xs" })
                            @Html.ActionLink("Retornar", "Index", null, new { @class = "btn btn-success btn-outline btn-xs" })
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
