@model IEnumerable<PIM.Web.ViewModels.ReservaVM>

@{
    ViewBag.Title = "Reservas";
}
<div class="row">
    <div class="col-lg-12">
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-sm-4">
                <h2>Reservas</h2>
                <ol class="breadcrumb">
                    <li class="active">
                        <strong>Reservas</strong>
                    </li>
                </ol>
            </div>
        </div>
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Lista de Reservas</h5>
                <div class="ibox-tools">
                    @Html.ActionLink("Criar", "Create", null, new { @class = "btn btn-success btn-outline btn-xs" })
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DataReserva)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ConfirmacaoReserva)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeMorador)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdTipoReserva)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataReserva)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Confirmacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeMorador)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoReserva)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalhe", "Details", new { id = item.Identificador }, new { @class = "btn btn-primary btn-outline btn-xs" })
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Identificador }, new { @class = "btn btn-warning btn-outline btn-xs" })
                                    @Html.ActionLink("Remover", "Delete", new { id = item.Identificador }, new { @class = "btn btn-danger btn-outline btn-xs" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
