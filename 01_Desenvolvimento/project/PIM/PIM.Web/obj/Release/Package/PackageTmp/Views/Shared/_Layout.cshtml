@using PIM.Web.Helper
@using PIM.Database.TO
@using System.Web.Optimization

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>SIGACON | @ViewBag.Title</title>

    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Styles.Render("~/Content/datatable")
    @System.Web.Optimization.Scripts.Render("~/Scripts/js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/plugins")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>

</head>

<body class="top-navigation">

    <div id="wrapper">
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom white-bg">
                <nav class="navbar navbar-static-top" role="navigation">
                    <div class="navbar-header">
                        <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                            <i class="fa fa-reorder"></i>
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand">SIGACON</a>
                    </div>
                    <div class="navbar-collapse collapse" id="navbar">
                        <ul class="nav navbar-nav @Html.IsSelected(controller: "Home")">

                            @if (Session["UsuarioTO"] != null)
                            {
                                UsuarioTO to = (UsuarioTO)Session["UsuarioTO"];

                                if (to.IdGrupo == 1)
                                {
                                    <li class="@Html.IsSelected("Colaboradores","Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Colaboradores")">Colaboradores</a>
                                    </li>
                                    <li class="@Html.IsSelected("GruposUsuarios","Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "GruposUsuarios")">Grupos de Usuários</a>
                                    </li>
                                    <li class="@Html.IsSelected("Usuarios", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Usuarios")">Usuários</a>
                                    </li>
                                    <li class="@Html.IsSelected("Contratos", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Contratos")">Contratos</a>
                                    </li>
                                    <li class="@Html.IsSelected("Apartamentos", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Apartamentos")">Apartamentos</a>
                                    </li>
                                    <li class="@Html.IsSelected("Estacionamentos", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Estacionamentos")">Estacionamento</a>
                                    </li>
                                    <li class="@Html.IsSelected("TipoReservas", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "TipoReservas")">Tipo de Reserva</a>
                                    </li>
                                }
                                else if (to.IdGrupo == 2)
                                {
                                    <li class="@Html.IsSelected("Moradores", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Moradores")">Moradores</a>
                                    </li>
                                    <li class="@Html.IsSelected("Reservas", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Reservas")">Reservas</a>
                                    </li>
                                    <li class="@Html.IsSelected("Dependentes", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Dependentes")">Dependentes</a>
                                    </li>
                                    <li class="@Html.IsSelected("Apartamentos","Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Apartamentos")">Apartamentos</a>
                                    </li>
                                    <li class="@Html.IsSelected("Estacionamentos", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Estacionamentos")">Estacionamentos</a>
                                    </li>
                                    <li class="@Html.IsSelected("Advertencias", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Advertencias")">Advertências</a>
                                    </li>
                                    <li class="@Html.IsSelected("Ocorrencias", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Ocorrencias")">Ocorrências</a>
                                    </li>
                                    <li class="@Html.IsSelected("Visitantes", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Visitantes")">Visitantes</a>
                                    </li>
                                }
                                else if (to.IdGrupo == 3)
                                {
                                    <li class="@Html.IsSelected("Moradores", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Moradores")">Moradores</a>
                                    </li>
                                    <li class="@Html.IsSelected("Dependentes" ,"Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Dependentes")">Dependentes</a>
                                    </li>
                                    <li class="@Html.IsSelected("Visitantes", "Index")">
                                        <a aria-expanded="false" role="button" href="@Url.Action("Index", "Visitantes")">Visitantes</a>
                                    </li>
                                }
                            }
                            else if (Session["MoradorTO"] != null)
                            {
                                <li class="@Html.IsSelected("Dependentes", "Index")">
                                    <a aria-expanded="false" role="button" href="@Url.Action("Index", "Dependentes")">Dependentes</a>
                                </li>
                                <li class="@Html.IsSelected("Visitantes", "Index")">
                                    <a aria-expanded="false" role="button" href="@Url.Action("Index", "Visitantes")">Visitantes</a>
                                </li>
                                <li class="@Html.IsSelected("Ocorrencias", "Index")">
                                    <a aria-expanded="false" role="button" href="@Url.Action("Index", "Ocorrencias")">Ocorrências</a>
                                </li>
                                <li class="@Html.IsSelected("Reservas",  "Index")">
                                    <a aria-expanded="false" role="button" href="@Url.Action("Index", "Reservas")">Reservas</a>
                                </li>
                            }
                        </ul>
                        <ul class="nav navbar-top-links navbar-right">
                            <li>
                                @Html.ActionLink("Log out", "Logoff", "Home")

                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="wrapper wrapper-content">
                @RenderBody()
            </div>
            <div class="footer">
                <div>
                    <strong>Copyright</strong> LM Consultoria &copy; 2017
                </div>
            </div>

        </div>
    </div>
    @Scripts.Render("~/bundles/inputmask")

</body>

</html>
